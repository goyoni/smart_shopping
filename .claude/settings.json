{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash(git commit:*)",
        "hooks": [
          {
            "type": "command",
            "command": "bash scripts/check_branch.sh"
          },
          {
            "type": "command",
            "command": "bash scripts/check_commit_scope.sh"
          }
        ]
      },
      {
        "matcher": "Bash(git commit:*)",
        "hooks": [
          {
            "type": "command",
            "command": "python -m pytest tests/unit -v --tb=short 2>&1 | tail -20"
          }
        ]
      },
      {
        "matcher": "Bash(git commit:*)",
        "hooks": [
          {
            "type": "command",
            "command": "python -m pytest tests/mcp -v --tb=short 2>&1 | tail -20"
          }
        ]
      },
      {
        "matcher": "Bash(git commit:*)",
        "hooks": [
          {
            "type": "command",
            "command": "bash scripts/run_agent_evals.sh"
          }
        ]
      }
    ]
  }
}
